<h1 style="font-size: 48px;">Burgers</h1>

<div class="container" id="avde">
  <div class="row">
    <div class="col-sm" id="available">
      <h2>Available Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burgers-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm" id="devoured">
      <h2>Devoured Burgers</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burgers-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="add">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger:</label>
      <input type="text" id="burg" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>